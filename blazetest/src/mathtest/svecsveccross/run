PATH_SVECSVECCROSS=$( dirname "${BASH_SOURCE[0]}" )

echo " Running sparse vector/sparse vector cross product tests...";

$PATH_SVECSVECCROSS/VCaVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_SVECSVECCROSS/VCaVCb; if [ $? != 0 ]; then exit 1; fi
$PATH_SVECSVECCROSS/VCbVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_SVECSVECCROSS/VCbVCb; if [ $? != 0 ]; then exit 1; fi

$PATH_SVECSVECCROSS/AliasingTest; if [ $? != 0 ]; then exit 1; fi
