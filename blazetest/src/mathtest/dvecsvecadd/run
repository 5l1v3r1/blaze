PATH_DVECSVECADD=$( dirname "${BASH_SOURCE[0]}" )

echo " Running dense vector/sparse vector addition tests..."

$PATH_DVECSVECADD/V2aVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V2aVCb; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V2bVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V2bVCb; if [ $? != 0 ]; then exit 1; fi

$PATH_DVECSVECADD/V3aVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V3aVCb; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V3bVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V3bVCb; if [ $? != 0 ]; then exit 1; fi

$PATH_DVECSVECADD/V4aVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V4aVCb; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V4bVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V4bVCb; if [ $? != 0 ]; then exit 1; fi

$PATH_DVECSVECADD/V5aVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V5aVCb; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V5bVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V5bVCb; if [ $? != 0 ]; then exit 1; fi

$PATH_DVECSVECADD/V6aVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V6aVCb; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V6bVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/V6bVCb; if [ $? != 0 ]; then exit 1; fi

$PATH_DVECSVECADD/VDaVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/VDaVCb; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/VDbVCa; if [ $? != 0 ]; then exit 1; fi
$PATH_DVECSVECADD/VDbVCb; if [ $? != 0 ]; then exit 1; fi

$PATH_DVECSVECADD/AliasingTest; if [ $? != 0 ]; then exit 1; fi
